<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                 
                            
                                                        

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_design"
        android:orientation="vertical"
        android:padding="16dp" android:tag="layout/nav_header_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <com.mvvmdemo.ui.custom.RoundedImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_account_circle_black_48dp" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:tag="binding_1"              />

        <TextView
            android:id="@+id/tv_email"
            style="@style/TextStyle.Title.Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_2"               />

    </LinearLayout>

         